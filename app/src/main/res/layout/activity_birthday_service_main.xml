<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BirthdayServiceMainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/background_color"
    >

    <TextView
        android:id="@+id/front_app_name"
        android:text="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/header_text_size"
        android:textColor="@color/header_text_color"/>

    <TextView android:text="@string/set_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/front_margin_top"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/front_margin_top"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/messageButton"
            android:layout_width="@dimen/front_button_width"
            android:layout_height="@dimen/front_button_height"
            android:layout_margin="@dimen/front_button_margin"
            android:background="@color/message_button_color"
            android:onClick="goToNewMessage" />

        <Button
            android:id="@+id/contactsButton"
            android:layout_width="@dimen/front_button_width"
            android:layout_height="@dimen/front_button_height"
            android:background="@color/contact_button_color"
            android:layout_margin="@dimen/front_button_margin"
            android:onClick="goToContacts" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/birthdaysButton"
            android:layout_width="@dimen/front_button_width"
            android:layout_height="@dimen/front_button_height"
            android:layout_margin="@dimen/front_button_margin"
            android:background="@color/birthdaylist_button_color"
            android:onClick="goToBirthdayList" />

        <Button
            android:id="@+id/changeLanguageButton"
            android:layout_width="@dimen/front_button_width"
            android:layout_height="@dimen/front_button_height"
            android:layout_margin="@dimen/front_button_margin"
            android:background="@color/header_text_color"
            android:onClick="changeLanguage" />

    </LinearLayout>

    <Switch
        android:id="@+id/startStopServiceSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>